<h1 class="text-center">Videos de Todos os Usuarios</h1>
<div class="container">
<div class="box box primary box-body">
<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Url do video</th>
      <th>Visualizações</th>
      <th>Email User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.id %></td>
        <td><%= video.name %></td>
        <td><%= video.url %></td>
        <td><%= video.view %></td>
        <td><%= video.user.email %></td>
        <td><%= link_to 'Ver', video %></td>
        <td><%= link_to 'Editar', edit_video_path(video) %></td>
        <td><%= link_to 'Remover', video, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @videos %>
<div class="box-footer clearfix">
<%= link_to 'Criar Video', new_video_path , class:'btn btn-success'%>
</div>
<br>
</div>
</div>